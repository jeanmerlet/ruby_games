class Board

  def initialize
    coordinates = []
    ('a'..'h').to_a.each do |x|
      8.times.with_index { |i| coordinates << x + (i+1).to_s }
    end
    @spots = coordinates.product([0]).to_h
  end

  def create_starting_pieces
    color = "white"
    2.times do
      Pawn.new(color)
      Rook.new(color)
      Bishop.new(color)
      Knight.new(color)
      Queen.new(color)
      King.new(color)
    end
  end

  def fill_spots_with_starting_pieces
  end

  def print_board
  end

